{% extends "base.njk" %}

{% block banner %}

    <div class="hero-slider">
        {% for item_b in banners %}

            <div class="single-slide" style="background-image: url({{item_b.bg}})">
                <div class="inner">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="slide-content">
                                    <h2>{{item_b.headline}}</h2>
                                    <p>{{item_b.desc}}</p>
                                    <div class="slide-btn">
                                        <a href="{{item_b.link.url}}" class="button">{{item_b.link.text}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

    <div class="service-area spt">
        <div class="container">
            <div class="section-title" data-margin="0 0 40px">
                <h2>{{service.title}}</h2>
                <p>{{service.desc}}</p>
            </div>

            <div class="row">

                {% for service in collections.services %}
                    <div class="col-lg-4 col-md-6 single-service-2">
                        <div class="inner">
                            <div class="title">
                                <div class="icon">
                                    <i class="fa fa-{{ service.data.faIcon }}"></i>
                                </div>
                                <h4>{{ service.data.title }}</h4>
                            </div>
                            <div class="content">
                                <p>
                                    {{ service.data.description }}
                                </p>
                                <a href="{{ service.url }}">Read more</a>
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </div>
    <div class="portfolio-area sp">
        <div class="container">
            <div class="section-title">
                <h2>{{portfolios.title}}</h2>
                <p>{{portfolios.desc}}</p>
            </div>

            <div class="row">
            
            {% for portfolio in collections.portfolios %}
                
                <div class="single-portfolio col-md-4">
                    <div class="inner">
                        <div class="portfolio-img">
                            <img src="{{portfolio.data.image.url}}" alt="{{portfolio.data.image.text}}">
                            <div class="hover-content">
                                <div>
                                    <a href="{{portfolio.data.btn.url}}" class="button">{{portfolio.data.btn.text}}</a>
                                </div>
                            </div>
                        </div>
                        <div class="portfolio-content">
                            <a href="#">
                                <h3>{{portfolio.data.heading}}</h3>
                            </a>
                            <span>{{portfolio.data.sub-head}}</span>
                        </div>
                    </div>
                </div>

            {% endfor %}

            </div>

            <div class="row">
                <div class="col-12 text-center" data-margin="40px 0 0">
                    <a href="#" class="button">More Works</a>
                </div>
            </div>
        </div>
    </div>

    <div class="spb">
        <div class="brand-area">
            <div class="container">
                <div class="row">
                {% for brand in collections.brands %}
                    
                    <div class="col-md-3 col-6 single-brand">
                        <div class="inner">
                            <a href="#">
                                <img src="{{brand.data.image.url}}" alt="{{brand.data.image.text}}">
                            </a>
                        </div>
                    </div>
                    
                {% endfor %}
                    
